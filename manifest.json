{
  "manifest_version": 3,
  "name": "add cars",
  "version": "1.0",
  "description": "Collects and updates car data from web pages",
  "permissions": ["scripting", "tabs", "storage"],
  "action": {
      "default_popup": "popup.html",
      "default_icon": {
          "16": "icon16.png",
          "32": "icon32.png",
          "48": "icon48.png",
          "128": "icon128.png"
      }
  },
  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["content.js"],
          "run_at": "document_end"
      }
  ],
  "background": {
      "scripts": ["background.js"],
      "persistent": false
  }
}
